    "@tanstack/react-query-devtools": "^5.90.2",
    "@types/lodash": "^4.17.20",
    "axios": "^1.13.2",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.19",
    "firebase": "^12.6.0",
    "framer-motion": "^12.23.24",
