    "i18next": "^25.6.3",
    "immer": "^10.2.0",
    "lodash": "^4.17.21",
    "nanoid": "^5.1.6",
    "next": "16.0.3",
    "next-i18next": "^15.4.2",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-hook-form": "^7.68.0",
    "react-i18next": "^16.3.5",
    "react-transition-group": "^4.4.5",
    "sass": "^1.94.2",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.1.12",
    "zustand": "^5.0.8"
